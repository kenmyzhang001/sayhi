# 环境变量配置示例
# 复制此文件为 .env 并修改相应配置

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
GIN_MODE=debug

# 数据库配置
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=sayhi
DB_CHARSET=utf8mb4
DB_MAX_IDLE=10
DB_MAX_OPEN=100
# DB_DSN=user:password@tcp(localhost:3306)/sayhi?charset=utf8mb4&parseTime=True&loc=Local

# JWT配置
JWT_SECRET=sayhi-secret-key-change-in-production
JWT_EXPIRE_TIME=24

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

